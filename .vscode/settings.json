{
	"[svelte]": { "editor.codeActionsOnSave": { "source.organizeImports": "always" } },
	"[typescript]": { "editor.codeActionsOnSave": { "source.organizeImports": "always" } },
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"editor.linkedEditing": true,
	"explorer.fileNesting.enabled": true,
		"explorer.fileNesting.patterns": { "package.json": "*" },
	"files.autoSave": "onFocusChange",
	"files.exclude": { ".svelte-kit": true, "build": true, "node_modules": true },
	"prettier.configPath": "./.prettierrc",
	"svelte.enable-ts-plugin": true,
	"workbench.editor.customLabels.patterns": {
		"*/**/*.*": "${filename}",	
		"*/src/**/+page.*": "${dirname}"
	}
}
